{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "commitMessageTopic": "Rust crate {{depName}}",
  "fileMatch": [
    "(^|/)Cargo\\.toml$"
  ],
  "versioning": "cargo",
  "automerge": true,
  "packageRules": [
    {
      "matchPackageNames": ["apollo-router"],
      "rangeStrategy": "pin"
    }
  ]
}